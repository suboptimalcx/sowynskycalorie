<UserControl x:Class="sowynskycalorie.View.AddProductViewModel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sowynskycalorie.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#FFF5E1">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Button Content="✕"
                Width="30"
                Height="30"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Background="#FF7043"
                Foreground="White"
                FontWeight="Bold"
                FontSize="14"
                BorderThickness="0"
                Cursor="Hand"
                Margin="0,0,0,10"
                Padding="0"
                Command="{Binding ExitViewCommand}"
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="15"
                            Width="30"
                            Height="30"
                            >
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Category:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,0"/>
            <ComboBox Width="200"
                      ItemsSource="{Binding Categories}"
                      SelectedItem="{Binding SelectedCategory}"
                      Background="White"
                      BorderBrush="#FFAB91"
                      Foreground="Black"/>
        </StackPanel>

        <ListView ItemsSource="{Binding FilteredProducts}"
                  SelectedItem="{Binding SelectedProduct}"
                  Grid.Row="1"
                  Background="White"
                  BorderBrush="#FFCCBC"
                  BorderThickness="1"
                  Margin="0,0,0,10">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="10" Margin="5" Background="#FFFFFF" CornerRadius="6" BorderBrush="#FFE0B2" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" Foreground="#5D4037"/>
                            <WrapPanel Margin="0,4,0,0">
                                <TextBlock Text="Kcal: " FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Calories}" Margin="4,0,15,0"/>
                                <TextBlock Text="P: " FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Protein}" Margin="4,0,15,0"/>
                                <TextBlock Text="F: " FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Fat}" Margin="4,0,15,0"/>
                                <TextBlock Text="C: " FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Carbohydrates}" Margin="4,0"/>
                            </WrapPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0,10,0,0">
            <TextBlock Text="Amount (g):" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Width="100"
                     Text="{Binding SelectedGrams}"
                     Margin="0,0,10,0"
                     Background="White"
                     BorderBrush="#FFAB91"/>
            <Button Content="Add"
                    Command="{Binding ConfirmCommand}"
                    IsEnabled="{Binding SelectedProduct}"
                    Background="#FF7043"
                    Foreground="White"
                    Padding="6,2"
                    Width="100"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    />
        </StackPanel>
    </Grid>
</UserControl>
