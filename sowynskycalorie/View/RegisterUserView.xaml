<UserControl x:Class="sowynskycalorie.View.RegisterUserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sowynskycalorie.View"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <Style TargetType="Button" x:Key="RoundedButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock" x:Key="InputLabel">
            <Setter Property="Foreground" Value="#FF7043"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#FFF5E1">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="290">

            <!-- Header Text instead of Logo -->
            <!-- Header Text instead of Logo -->
            <TextBlock Text="CREATE YOUR ACCOUNT" 
                       Foreground="#FF7043" 
                       FontSize="25" 
                       FontWeight="Bold" 
                       TextAlignment="Center" 
                       />
            <Border Height="3" Width="160" Background="#FF7043" CornerRadius="2"/>

            <!-- Username -->
            <TextBlock Text="Username" Style="{StaticResource InputLabel}" />
            <Border Height="38" Background="#FFF3E0" BorderBrush="#FF8A65" BorderThickness="1" CornerRadius="8" Margin="0,0,0,15">
                <TextBox x:Name="UsernameTextBox" 
                         Background="Transparent" BorderThickness="0" 
                         Foreground="#5D4037" FontSize="14" Padding="10" 
                         Text=""/>
            </Border>

            <!-- Password -->
            <TextBlock Text="Password" Style="{StaticResource InputLabel}" />
            <Border Height="38" Background="#FFF3E0" BorderBrush="#FF8A65" BorderThickness="1" CornerRadius="8" Margin="0,0,0,15">
                <PasswordBox x:Name="PasswordBox" 
                             Background="Transparent" BorderThickness="0" 
                             Foreground="#5D4037" FontSize="14" Padding="10"/>
            </Border>

            <!-- Date of Birth -->
            <TextBlock Text="Date of Birth" Style="{StaticResource InputLabel}" />
            <Border Width="290" Height="38" Background="#FFF3E0" BorderBrush="#FF8A65" BorderThickness="1" CornerRadius="8" Margin="0,0,0,15" Padding="10,0">
                <Grid VerticalAlignment="Center">
                    <TextBlock x:Name="SelectedDateText"
                   Foreground="#5D4037"
                   FontSize="14"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Text="{Binding SelectedDate, ElementName=DateOfBirthPicker, StringFormat=\{0:MM/dd/yyyy\}}"
                   IsHitTestVisible="False" />

                    <DatePicker x:Name="DateOfBirthPicker"
                    Background="Transparent"
                    BorderThickness="0"
                    Width="38" Height="28"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Padding="0" Margin="0,8,0,0">
                        <DatePicker.Resources>
                            <!-- Hide the text box part -->
                            <Style TargetType="{x:Type DatePickerTextBox}">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>
                </Grid>
            </Border>


            <!-- Weight -->
            <TextBlock Text="Weight (kg)" Style="{StaticResource InputLabel}" />
            <Border Height="38" Background="#FFF3E0" BorderBrush="#FF8A65" BorderThickness="1" CornerRadius="8" Margin="0,0,0,15">
                <TextBox x:Name="WeightTextBox" 
                         Background="Transparent" BorderThickness="0" 
                         Foreground="#5D4037" FontSize="14" Padding="10" 
                         Text=""/>
            </Border>

            <!-- Height -->
            <TextBlock Text="Height (cm)" Style="{StaticResource InputLabel}" />
            <Border Height="38" Background="#FFF3E0" BorderBrush="#FF8A65" BorderThickness="1" CornerRadius="8" Margin="0,0,0,25">
                <TextBox x:Name="HeightTextBox" 
                         Background="Transparent" BorderThickness="0" 
                         Foreground="#5D4037" FontSize="14" Padding="10" 
                         Text=""/>
            </Border>

            <!-- Register Button -->
            <Button Content="Register" Width="290" Height="45" Background="#FF7043" Foreground="White" FontWeight="Bold" FontSize="16"
                    BorderThickness="0" Cursor="Hand"
                    Style="{StaticResource RoundedButton}"
                    />

            <!-- Bottom Text -->
            <TextBlock Text="Already registered? Log in" Foreground="#FF7043" TextAlignment="Center" Margin="0,30,0,0" Cursor="Hand"
                       FontSize="14" FontWeight="SemiBold"
                       />
        </StackPanel>
    </Grid>
</UserControl>
